import java.util.*;
class Game extends GameCode
{
    Game()
    {
        super();
    }
    
    
    public static void main(String args[])
    {
        GameCode ob=new GameCode();  
        Scanner k=new Scanner(System.in);
        
        while(true)
        {
            ob.generator();
            ob.display();
            ob.gameRun(); 
            System.out.println("\nWanna Play Again ? \n YES or NO");
            String ch=k.next();
            if(ob.check(ch,1)==0)
            break;
       }           
        
        
    }
}
         
    
    
       
                
            
        
        
